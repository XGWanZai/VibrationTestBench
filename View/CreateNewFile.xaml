<Window x:Class="VibrationTestBench.View.CreateNewFile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VibrationTestBench.View"
        mc:Ignorable="d"
        Title="新建" Height="450" Width="800" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
            <Label Grid.Row="0" Content="请输入新建文件名"  FontSize="25" FontWeight="Black" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Black" />
        <TextBox Grid.Row="1" BorderThickness="1" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Text="{Binding Models.testedProduct}" BorderBrush="Black"  x:Name="text"  InputMethod.IsInputMethodEnabled="True" MaxLength="25" FontSize="20" Height="50" Width="350"/>
              <Button Content="确    定"   Grid.Row="2" Background="Honeydew" BorderThickness="1" Foreground="Black" FontSize="25" Height="45" Width="140" Click="Button_Click" />
    </Grid>
</Window>
